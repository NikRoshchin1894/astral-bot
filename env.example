TELEGRAM_BOT_TOKEN=your_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Прокси для OpenAI (опционально, для обхода географических ограничений)
# Если OpenAI блокирует запросы из вашего региона, настройте прокси-сервер
# Формат: http://user:pass@proxy.example.com:8080 или socks5://proxy.example.com:1080
# Примеры:
# - HTTP прокси: http://proxy.example.com:8080
# - SOCKS5 прокси: socks5://proxy.example.com:1080
# - С аутентификацией: http://user:password@proxy.example.com:8080
OPENAI_PROXY_URL=
# Альтернативно можно использовать стандартные переменные:
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# ЮKassa настройки для оплаты (внешняя ссылка - сразу открывается выбор способов оплаты)
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key

# Webhook URL для получения уведомлений от YooKassa (обязательно HTTPS!)
# Примеры:
# - Railway: https://your-app.railway.app/webhook/yookassa
# - Render: https://your-app.onrender.com/webhook/yookassa
# - VPS: https://your-domain.com/webhook/yookassa
YOOKASSA_WEBHOOK_URL=https://your-domain.com/webhook/yookassa

# Порт для webhook сервера (опционально, по умолчанию 8080)
WEBHOOK_PORT=8080

# URL для возврата после оплаты (опционально, если не указаны - будет использован TELEGRAM_BOT_USERNAME)
PAYMENT_SUCCESS_URL=https://t.me/your_bot_username?start=payment_success
PAYMENT_RETURN_URL=https://t.me/your_bot_username?start=payment_cancel

# Username бота в Telegram (опционально, если не указан PAYMENT_SUCCESS_URL/PAYMENT_RETURN_URL)
TELEGRAM_BOT_USERNAME=your_bot_username

# Webhook для Telegram (обязательно для режима webhook)
# Формат: https://ваш-домен.com/webhook/telegram
# Пример: https://nikroshchin1894-astral-bot-e77d.twc1.net/webhook/telegram
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# База данных (PostgreSQL на Railway/Render)
# Приоритет: сначала DATABASE_PUBLIC_URL, затем DATABASE_URL (для обратной совместимости)
DATABASE_PUBLIC_URL=postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@host:port/database  # Альтернативный вариант
